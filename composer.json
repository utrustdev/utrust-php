{
  "name": "utrust/utrust",
  "description": "Utrust API library",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Utrust Team",
      "email": "team@utrust.com"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "vlucas/valitron": "^1.4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "*"
  },
  "autoload": {
    "psr-4": {
      "Utrust\\": "src/"
    }
  },
  "scripts": {
    "lint": [
      "./vendor/bin/phpcs --standard=PSR2 src/"
    ],
    "test": [
      "phpunit tests/"
    ]
  }
}
